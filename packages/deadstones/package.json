{
  "name": "@kaya/deadstones",
  "version": "0.1.2",
  "description": "Monte Carlo algorithm to determine dead stones on a Go board - Rust/WASM implementation",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "wasm",
    "src-rust"
  ],
  "scripts": {
    "setup": "bun run scripts/setup.ts",
    "build:wasm": "wasm-pack build src-rust --target bundler --out-dir ../dist/wasm --out-name deadstones",
    "build:ts": "tsc",
    "build": "bun run build:wasm && bun run build:ts",
    "type-check": "tsc --noEmit",
    "clean": "bun run scripts/clean.ts"
  },
  "keywords": [
    "go",
    "baduk",
    "weiqi",
    "board-game",
    "monte-carlo",
    "wasm",
    "rust"
  ],
  "author": "Kaya Team",
  "license": "AGPL-3.0",
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "wasm-pack": "^0.13.1"
  },
  "dependencies": {}
}
