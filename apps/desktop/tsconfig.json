{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.tsx", "src/**/*.ts"],
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../packages/goboard" },
    { "path": "../../packages/sgf" },
    { "path": "../../packages/gametree" },
    { "path": "../../packages/shudan" },
    { "path": "../../packages/gtp" }
  ]
}
