{
  "name": "@kaya/desktop",
  "version": "0.1.11-dev",
  "private": true,
  "description": "Kaya desktop application",
  "type": "module",
  "scripts": {
    "dev": "rsbuild dev",
    "build": "bun run --cwd ../.. generate-version-info && bun run --cwd ../.. copy-assets && bun run --cwd ../.. build:packages && rsbuild build",
    "preview": "rsbuild preview",
    "type-check": "tsc --build --force",
    "lint": "eslint src --ext ts,tsx",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:check": "cargo check --manifest-path src-tauri/Cargo.toml"
  },
  "dependencies": {
    "@dagrejs/dagre": "^2.0.0",
    "@dagrejs/graphlib": "^2.2.4",
    "@kaya/gametree": "workspace:*",
    "@kaya/goboard": "workspace:*",
    "@kaya/gtp": "workspace:*",
    "@kaya/sgf": "workspace:*",
    "@kaya/shudan": "workspace:*",
    "@kaya/ui": "workspace:*",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-http": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "coi-serviceworker": "^0.1.7",
    "i18next": "^25.7.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.6.15",
    "@rsbuild/plugin-react": "^1.1.5",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.6.0"
  }
}
